.user {
  background-color: #f5f5f5;
  height: 100%;
  min-height:1200rpx;
}

.user-info {
  width: 100%;
  height: 300rpx;
  background-color: #e5e5e5;
  text-align: center;
}
.user-info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin:  0 auto;
  margin-top: 40rpx;
}
.user-info .user-desc {
  width: 100%;
  margin-top: 40rpx;
}
.user-info .user-desc text+text{
  margin-left: 30rpx;
}

.menu-list {
  margin-top: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
  height: 100%;
}
.menu-list .menu-list-item {
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
